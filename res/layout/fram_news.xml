<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee" >

    <HorizontalScrollView
        android:id="@+id/hsv_news"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="#ccc"
        android:scrollbars="none" >

        <RadioGroup
            android:id="@+id/rg_news"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_news_redian"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="热点"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_toutiao"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="头条"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_keji"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="科技"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_yule"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="娱乐"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_youxi"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="游戏"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_yingshi"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="影视"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_tiyu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="体育"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_caijing"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="财经"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_qiche"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="汽车"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_shishang"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="时尚"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_junshi"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="军事"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_lishi"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="历史"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_caipiao"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="彩票"
                android:textColor="@color/Color.Main.a" />

            <RadioButton
                android:id="@+id/rb_news_luntan"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/select_bt_news"
                android:button="@null"
                android:gravity="center"
                android:text="论坛"
                android:textColor="@color/Color.Main.a" />
        </RadioGroup>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_news_framents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hsv_news" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>