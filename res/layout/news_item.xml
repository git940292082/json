<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_news_item_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_gif_full" />

    <RelativeLayout
        android:id="@+id/iv_news_item_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="10dp"
            android:text="女演员称有郭姓前任衣食独守空房迪斯科浪费精力宽松" />

        <TextView
            android:id="@+id/tv_news_item_source"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/tv_news_item_title"
            android:layout_below="@+id/tv_news_item_title"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="网易娱乐"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>