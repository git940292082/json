<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- state_pressed表示按下 -->
    <item android:drawable="@drawable/shape_button_pressed" android:state_pressed="true"></item>
    
    <!-- 表示启用，取值为false，则表示禁用-->
    <item android:drawable="@drawable/shape_button_checkable" android:state_enabled="false"></item>
    
    <!-- 没有配置state，表示匹配以上列举的状态以外的所有状态 -->
    <item android:drawable="@drawable/shape_button_normal"></item>

</selector>