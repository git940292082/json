<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>

            <!-- 配置边角 -->
            <corners android:radius="18dp" />

            <!-- 配置渐变色 -->
            <gradient
                android:angle="90"
                android:centerColor="#999999"
                android:endColor="#999999"
                android:startColor="#999999" />
        </shape>
    </item>
    
    <item
        android:bottom="1dp"
        android:right="1dp">
        <shape>

            <!-- 配置边角 -->
            <corners android:radius="18dp" />

            <!-- 配置渐变色 -->
            <gradient
                android:angle="90"
                android:centerColor="#93268F"
                android:endColor="#93268F"
                android:startColor="#93268F" />
        </shape>
    </item>

</layer-list>